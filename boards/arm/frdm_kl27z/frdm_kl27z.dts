/dts-v1/;

#include <nxp/nxp_kl27z.dtsi>

/ {
	model = "NXP Freedom KL27Z board";
	compatible = "nxp,frdm-kl27z", "nxp,kl27z", "nxp,mkl27z4";

	aliases {
		//adc-0 = &adc0;
		lpuart-0 = &lpuart0;
		i2c-0 = &i2c0;
		i2c-1 = &i2c1;
		gpio-a = &gpioa;
		gpio-b = &gpiob;
		gpio-c = &gpioc;
		gpio-d = &gpiod;
		gpio-e = &gpioe;
		led0 = &green_led;
		led1 = &blue_led;
		led2 = &red_led;
		sw0 = &user_button_0;
		sw1 = &user_button_1;
	};

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,console = &lpuart0;
		zephyr,shell-uart = &lpuart0;
	};

	leds {
		compatible = "gpio-leds";
		red_led: led_0 {
			gpios = <&gpiob 18 0>;
			label = "User LD1";
		};
		green_led: led_1 {
			gpios = <&gpiob 19 0>;
			label = "User LD2";
		};
		blue_led: led_2 {
			gpios = <&gpioa 13 0>;
			label = "User LD3";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button_0: button_0 {
			label = "User SW1";
			gpios = <&gpioa 4 GPIO_INT_ACTIVE_LOW>;
		};
		user_button_1: button_1 {
			label = "User SW3";
			gpios = <&gpioc 1 GPIO_INT_ACTIVE_LOW>;
		};
	};

};

/*
&adc0 {
	status = "ok";
};
*/

&i2c1 {
	status = "ok";
	mma8451q@1d {
		compatible = "nxp,fxos8700","nxp,mma8451q";
		reg = <0x1d>;
		label = "MMA8451Q";
		int1-gpios = <&gpioc 3 0>;
		int2-gpios = <&gpioc 2 0>;
	};
};

&lpuart0 {
	status = "ok";
	current-speed = <115200>;
};
